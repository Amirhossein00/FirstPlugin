@model IEnumerable<ProjectModel>

@{
    Layout = "_ColumnsOne";
}
<h2 style="text-align:center;">All Public Projects</h2>
<br />
<p>

</p>
<style>
    .crt_table {
        border-collapse: collapse;
        width: 100%;
    }

        .crt_table td, th {
            text-align: left;
            padding: 8px;
            border: 1px solid #dddddd;
        }

        .crt_table tr:nth-child(even) {
            background-color: #dddddd;
        }

    ._btn {
        border: 1px solid #4ab2f1;
        background: #4ab2f1;
        color: whitesmoke;
        border-radius: 15px;
        padding: 6px;
    }
</style>
<table class="crt_table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>

            <th>
                More Detail
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </td>

                <td>

                    <a class="_btn" asp-action="Detail" asp-route-id="@item.Id">Details</a>

                </td>
            </tr>
        }

    </tbody>
</table>